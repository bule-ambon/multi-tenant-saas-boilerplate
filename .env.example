# Application
APP_NAME=Multi-Tenant SaaS Platform
ENVIRONMENT=development
SECRET_KEY=change-this-to-a-secure-random-key-in-production-min-32-chars
DEBUG=true
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost","http://localhost:3000","http://localhost:8000","http://192.168.4.53","http://192.168.4.53:3000","http://192.168.4.53:8000","https://localhost","https://192.168.4.53"]

# Database
DATABASE_URL=postgresql://saas_user:saas_password@localhost:5432/saas_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=true

# Multi-Tenancy Configuration
TENANCY_MODE=shared  # Options: shared (RLS) or isolated (separate DB per tenant)
TENANT_IDENTIFICATION=subdomain  # Options: subdomain or header
TENANT_HEADER_NAME=X-Tenant-ID
DEFAULT_TENANT_DB_PREFIX=tenant_

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
REQUIRE_EMAIL_VERIFICATION=true
REQUIRE_MFA_FOR_ADMIN=false
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Paystack (Alternative)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_key

# Flutterwave (Alternative)
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public

# Redis Cache & Sessions
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600
SESSION_TTL=86400

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_TLS=true
FROM_EMAIL=noreply@yoursaas.com
FROM_NAME=Multi-Tenant SaaS Platform

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
ENABLE_CSRF_PROTECTION=true
CSRF_SECRET_KEY=change-this-csrf-secret-key
ENCRYPTION_KEY=32-byte-base64-encoded-encryption-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRATEGY=sliding-window  # Options: fixed-window, sliding-window, token-bucket
RATE_LIMIT_STORAGE=redis

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_SQL_LOGGING=false
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_OAUTH=true
ENABLE_MFA=true
ENABLE_WEBHOOKS=true
ENABLE_AUDIT_LOGS=true
ENABLE_USAGE_TRACKING=true

# Billing & Subscriptions
DEFAULT_TRIAL_DAYS=14
ENABLE_PRORATION=true
INVOICE_AUTO_SEND=true
BILLING_CURRENCY=USD

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Frontend URLs
FRONTEND_URL=http://localhost:3000
VERIFY_EMAIL_URL=http://localhost:3000/verify-email
RESET_PASSWORD_URL=http://localhost:3000/reset-password

# Admin
SUPER_ADMIN_EMAIL=admin@yoursaas.com
SUPER_ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Deployment
WORKERS_PER_CORE=1
MAX_WORKERS=4
KEEP_ALIVE=5
